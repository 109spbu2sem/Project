double functionZNACHENIE (double x)
{
	return (x * x - 2 * x - 3);
}

double ZNACHENIEPROIZVODNOI (double x)
{
	return (2 * x - 2);
}

double ZNACHENIEX (double y)
{
	return (y + 2)/2;
}

